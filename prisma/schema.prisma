// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Property {
  id                String   @id @default(cuid())
  name              String?
  slug              String?
  price             Decimal? @db.Decimal
  category          String?
  subcategory       String?
  developer         String?
  yearBuilt         Int?
  lotSize           Int?
  unitSize          Int?
  numberOfBedrooms  Int?
  numberOfBathrooms Int?
  parkingLot        Boolean?

  // Relations
  owner                String?
  images               String[]
  listOfNearestObjects String[]
  address              Address?

  // Timestamp
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map(name: "properties")
}

model Address {
  id           String   @id @default(cuid())
  street       String?
  streetDetail String?
  city         String?
  province     String?
  zip          String?
  country      String?
  lat          String?
  long         String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  property   Property? @relation(fields: [propertyId], references: [id])
  propertyId String?
  @@map(name: "addresses")
}
