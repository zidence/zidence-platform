datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Properties {
  id                Int      @id @default(autoincrement())
  name              String?  @unique
  slug              String?  @unique
  price             Decimal? @db.Money
  developer         String?
  category          String?
  yearBuilt         Int?
  lotSize           Int?
  unitSize          Int?
  numberOfBedrooms  Int?
  numberOfBathrooms Int?
  parkingLot        Boolean?

  // Relations
  owner                String?
  images               String[]
  listOfNearestObjects String[]

  // Timestamp
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // locations            Locations? @relation(fields: [locationId], references: [id])
  // locationId           Int?
  @@map(name: "properties")
}

